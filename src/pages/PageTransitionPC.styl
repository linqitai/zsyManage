@import "~common/stylus/variable"
.layout
  position relative;
  height 100%;
  width 100%;
  background-color: rgb(236, 236, 236);
  .header
    position absolute;
    left 0
    right 0
    top 0
    height $header-height // 44px
    line-height $header-height
    background-color: $color-theme;
    padding-left $left;
    color: $color-text-white;
    z-index 1111
    .logo
      font-size: $font-size-medium-x;
      display: inline-block;
      cursor pointer
      a
        color white
    .right
      float right;
      font-size $font-size-medium
      .username
        margin-right 12px
      .demo-flat-button
        height 18px;
        line-height 18px;
        width 18px;
        min-width 0;
        font-size 18px;
        padding 22px 22px 22px 28px !important;
        color $color-text-white;
  .content
    position absolute;
    left 0;
    right 0;
    bottom $header-height
    top $header-height
    overflow hidden
    .content-wrapper
      position relative
      height 100%;
      display flex;
      .content-left
        position relative
        flex 0 0 200px;
        background-color: $color-menu-background;
      .content-right
        position relative
        width 100%;
        flex 1;
        overflow auto
        .breadcrumb
          position absolute
          top 0
          left 0
          right 0
          height $breadcrumb-height;
          line-height $breadcrumb-height;
          background-color $color-breadcrumb-background;
          font-size $font-size-medium-l;
          border-bottom 1px solid #efefef
          font-weight normal
          padding 0 $left
          .iconHome
            color $color-text-AD
            cursor pointer
            font-size $font-size-medium;
          .breadcrumbText
            color $color-text-AD
          .breadcrumbTextCurrent
            color $color-theme
          .mu-breadcrumb-item-separator
            margin 0 0
        .mu-dropDown-menu-text-overflow
          text-align center
        .mu-text-field
          width auto
          min-width auto
        .right-page
          position absolute
          width 100%
          min-width $min-width
          top $breadcrumb-height
          bottom 0px
          .searchBox
            width 100%
            padding-top 10px
            padding-left $left
            padding-right $left
            background-color $color-searchBox-background
            margin-top $distance-top
            .box
              display inline-block
              .boxlabel
                float left
                height 48px
                line-height 48px
                margin-right 6px
              .marginRight
                margin-right 6px
              .normalWidth-m
                width 100px;
              .normalWidth
                width 100px;
              .normalWidth-l
                width 120px;
              .normalWidth-ll
                width 140px;
              .overflow
                overflow hidden
              .mu-flat-button
                min-width 0
              .btnWidthForMore
                width 40px !important;
              // .mu-text-field
              //   width 120px
            .boxpdl
              margin-left 12px;
            .verticalAlignBottom
              vertical-align bottom
          .tableWrapper
            overflow-x auto
            margin-top $distance-top
            .paginationWrapper
              overflow hidden
              margin-top $distance-top
              padding $left
              background-color $color-pagination-background
            .el-pagination
              float left
            .el-table td
              padding 8px 0
  .footer
    position absolute;
    left 0;
    right 0;
    bottom 0;
    height $header-height
    line-height $header-height
    color: $color-text-white;
    font-size $font-size-small;
    text-align: center;
    background-color $color-theme;